

<ScrollView


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


          <TextView
        android:id="@+id/lbl_title_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/new_group_text"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cl_parent"
        app:layout_constraintStart_toStartOf="@+id/cl_parent"
        app:layout_constraintTop_toTopOf="@+id/cl_parent" />

     <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/action_create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_users" />

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/name_text"
        app:layout_constraintStart_toStartOf="@+id/lbl_title_group"
        app:layout_constraintTop_toBottomOf="@+id/lbl_title_group" />

    <EditText

        android:id="@+id/edit_name"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_group_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/lbl_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

    <TextView
        android:id="@+id/lbl_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/users"
        app:layout_constraintEnd_toEndOf="@+id/cl_parent"
        app:layout_constraintStart_toStartOf="@+id/cl_parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_user" />

    <Button
        android:id="@+id/btn_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/btn_add_user"
        app:layout_constraintEnd_toEndOf="@+id/cl_parent"
        app:layout_constraintStart_toStartOf="@+id/cl_parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name" />

    <TextView
        android:id="@+id/txt_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_parent"
        app:layout_constraintStart_toStartOf="@+id/cl_parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_users" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>